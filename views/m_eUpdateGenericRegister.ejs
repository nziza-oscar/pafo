    <style>
      [x-cloak]{
        display: none !important;
      }
      body {
            font-family: "Poppins", serif;
            font-weight: 400;
            font-style: normal;
        }
        .bg-green-600{
            background-color: #388e3c;
            color: aliceblue;
        }
